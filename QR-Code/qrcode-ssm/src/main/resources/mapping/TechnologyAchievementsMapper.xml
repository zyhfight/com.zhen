<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhen.dao.TechnologyAchievementsDao">

    <resultMap id="TechnologyAchievements" type="com.zhen.model.TechnologyAchievements">
        <id column="student_id" property="studentId" jdbcType="VARCHAR"/>
        <result column="achievement_id" property="achievementId" jdbcType="VARCHAR"/>
        <result column="achievement_description" property="achievementDescription" jdbcType="VARCHAR"/>
        <result column="achievement_score" property="achievementScore" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="update_time" property="updateTime" jdbcType="DATE"/>
        <result column="deleted" property="deleted" jdbcType="BIGINT"/>
    </resultMap>

    <select id="selectTechnologyAchievementsById" parameterType="java.lang.String" resultMap="TechnologyAchievements">
        SELECT * FROM technology_achievements
        WHERE student_id = #{studentId} AND deleted=0
    </select>

    <select id="selectTechnologyAchievement" parameterType="java.lang.String" resultMap="TechnologyAchievements">
        SELECT * FROM technology_achievements
        WHERE student_id = #{0} AND deleted=0 AND achievement_id=#{1}
    </select>

    <select id="selectAllTechnologyAchievements"  resultMap="TechnologyAchievements">
        SELECT * FROM technology_achievements WHERE deleted=0
    </select>

    <update id="updateTechnologyAchievements" parameterType="com.zhen.model.TechnologyAchievements">
        UPDATE technology_achievements
        <set>
            <!--<if test="achievementId != null">-->
            <!--achievement_id = #{achievementId},-->
            <!--</if>-->
            <if test="achievementDescription != null">
                achievement_description = #{achievementDescription},
            </if>
            <if test="achievementScore != null">
                achievement_score = #{achievementScore},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        WHERE student_id=#{studentId} and achievement_id = #{achievementId}
    </update>

    <delete id="deleteTechnologyAchievements" parameterType="java.lang.String">
        DELETE FROM technology_achievements WHERE student_id=#{0} and achievement_id = #{1}
    </delete>

    <delete id="deleteTechnologyAchievementById" parameterType="java.lang.String">
        DELETE  FROM  technology_achievements WHERE student_id=#{studentId}
    </delete>

    <insert id="addTechnologyAchievements" parameterType="com.zhen.model.TechnologyAchievements">
        INSERT INTO technology_achievements(student_id,achievement_id,achievement_description,achievement_score,create_time,update_time)
        VALUES (#{studentId},#{achievementId},#{achievementDescription},#{achievementScore},#{createTime},#{updateTime})
    </insert>


</mapper>